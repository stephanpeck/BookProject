        </a>*@

    @* Table with bootstrap theme, and hover capabilities *@
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Publisher</th>
                <th scope="col">Classification</th>
                <th scope="col">Category</th>
                <th scope="col">Pages</th>
                <th scope="col">ISBN</th>
                <th scope="col">Price</th>

            </tr>
        </thead>
        @* For loop that will go through the model and display all the results *@
        <tbody>
            @foreach (var x in Model.BookModels)
            {
                <tr>
                    <td>@x.BookID</td>
                    <td><b>@x.Title</b></td>
                    <td>@x.AuthorLName, @x.AuthorFName @x.AuthorMName</td>
                    <td>@x.Publisher</td>
                    <td>@x.Classification</td>
                    <td>@x.Category</td>
                    <td>@x.Pages</td>
                    <td>@x.ISBN</td>
                    <td>$@x.Price</td>

                </tr>
            }
        </tbody>


    </table>



</div>

<div style="float:right" page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-light"
     page-class-selected="btn-primary"
     ></div>


